{
  "name": "project",
  "version": "0.2.4",
  "description": "Telegram BOT, to plan barbershop visit",
  "author": "x-x-x-Ilya",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "nodemon start": "nodemon src/main.ts",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "backup": "nodemon src/database/backup.ts",
    "firebase hosting": "firebase serve --only hosting --port=80",
    "firebase deploy": "firebase deploy",
    "mongo try": "nodemon src/mongo/init.ts",

    "fbuild": "tsc",
    "fserve": "npm run build && firebase emulators:start --only functions",
    "fshell": "npm run build && firebase functions:shell",
    "fstart": "npm run shell",
    "fdeploy": "firebase deploy --only functions",
    "flogs": "firebase functions:log"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "amqplib": "^0.5.6",
    "docker": "^1.0.0",
    "firebase": "^7.16.0",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.8.0",
    "firebase-functions-test": "^0.2.1",
    "lodash": "^4.17.15",
    "mongodb": "^3.5.9",
    "node-telegram-bot-api": "^0.50.0",
    "nodemailer": "^6.4.10",
    "nodemon": "^2.0.4",
    "pg": "^8.2.1",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "sequelize": "^5.21.13"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.6",
    "@types/jest": "25.2.3",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "cors": "^2.8.5",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "26.0.1",
    "prettier": "^1.19.1",
    "sequelize-cli": "^6.2.0",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
